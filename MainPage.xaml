<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="FirstMauiApp.MainPage">

    <ScrollView>

        <VerticalStackLayout
            Spacing="25"
            Padding="30,0">

            <Label
                Text="OMRON Formation MAUI"
                FontSize="32"
                Margin="10"
                HorizontalOptions="Center" 
                FontAttributes="Bold"/>

            <Label
                Text="Formulaire de création d'un robot" 
                FontAttributes="Bold"
                FontSize="18"/>

            <HorizontalStackLayout>
                <Label
                    Text="Nom du robot"
                    VerticalOptions="Center"
                    Margin="10" />
                <Entry
                    x:Name="nameEntry"
                    Placeholder="Nom du robot"
                    Keyboard="Text"
                    />
            </HorizontalStackLayout>

            <HorizontalStackLayout>
                <Label
                    Text="Type de robot"
                    VerticalOptions="Center"
                    Margin="10"/>
                <Picker 
                    x:Name="typePicker"
                    HorizontalOptions="FillAndExpand">
                    <Picker.ItemsSource>
                        <x:Array Type="{x:Type x:String}">
                            <x:String>Droïde de protocole</x:String>
                            <x:String>Droïde astromécano</x:String>
                            <x:String>Droïde gentil</x:String>
                            <x:String>Droïde méchant</x:String>
                        </x:Array>
                    </Picker.ItemsSource>
                </Picker>
            </HorizontalStackLayout>

            <Grid 
                HorizontalOptions="FillAndExpand">
            
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                </Grid.ColumnDefinitions>

                <Label 
                    Grid.Column="0"
                    Text="Taille du robot"
                    VerticalOptions="Center"
                    Margin="10"/>

                <Slider 
                    x:Name="slider"
                    Grid.Column="1"
                    Minimum="0"
                    Maximum="100"
                    Value="0"
                    HorizontalOptions="FillAndExpand"/>
            </Grid>

            <Label
                BindingContext="{x:Reference slider}"
                Text="{Binding Value, StringFormat='Le robot est de taille {0:F0}'}"
                HorizontalOptions="Center"/>


            <Button
                x:Name="CounterBtn"
                Text="Ajouter un robot"
                SemanticProperties.Hint="Crée un nouveau robot"
                Clicked="createRobot"
                HorizontalOptions="Center" />


            <StackLayout x:Name="robotsStackLayout">
            </StackLayout>


            <ListView 
                x:Name="robotsListView"
                ItemsSource="{Binding Robots}">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Grid Margin="10">
                                <Grid.RowDefinitions>
                                    <RowDefinition Height="Auto"/>
                                    <RowDefinition Height="Auto"/>
                                </Grid.RowDefinitions>
                                
                                <Label 
                                    Grid.Row="0"
                                    Text="{Binding Name, StringFormat='Prénom de robot: {0}'}"
                                    FontSize="{Binding Size}"
                                    HorizontalTextAlignment="Center"/>

                                <Label 
                                    Grid.Row="1"
                                    Text="{Binding Type, StringFormat='Il est de type: {0}'}"
                                    FontSize="{Binding Size}"
                                    HorizontalTextAlignment="Center"/>
                            </Grid>
                        </ViewCell>

                        <!--<TextCell
                            Text="{Binding Name, StringFormat='Prénom de robot: {0}'}"
                            Detail="{Binding Type, StringFormat='Il est de type: {0}'}">
                        </TextCell>-->

                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>

        </VerticalStackLayout>
    </ScrollView>


</ContentPage>
